{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/",
    "**/node_modules/",
    "scripts/",
    "build/",
    "dist/",
    "docs/"
  ]
}
